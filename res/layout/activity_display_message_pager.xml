    <RelativeLayout android:id="@+id/recipe_container"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical" >
            
        <ImageView android:id="@+id/recipe_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:adjustViewBounds="true" />
        <!--android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"-->
        <!--android:src="@drawable/recipe1"-->
        	    
        <TextView android:id="@+id/chapter"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
				  android:textSize="@dimen/large_text_size"
                  android:layout_marginLeft="@dimen/margin_left"
                  android:layout_marginTop="10dp"
                  android:layout_below="@+id/recipe_image" />

        <TextView android:id="@+id/recipe"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
				  android:textSize="@dimen/large_text_size"
                  android:layout_marginLeft="@dimen/margin_left"
                  android:paddingTop="-60dp"
			      android:layout_below="@+id/chapter" />

        <TextView android:id="@+id/recipe_headnote"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
				  android:textSize="@dimen/small_text_size"
                  android:layout_marginLeft="@dimen/margin_left"
                  android:layout_marginRight="@dimen/margin_right"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="0dp"
                  android:background="@color/color2_pale"
	    		  android:layout_below="@+id/recipe" />

        <TextView android:id="@+id/recipe_ingredients_title"
	    		  android:text="Ingredients:"
	    	      android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
				  android:textSize="@dimen/medium_text_size"
                  android:layout_marginLeft="@dimen/margin_left"
                  android:layout_marginRight="@dimen/margin_right"
                  android:layout_marginTop="10dp"
	    		  android:layout_below="@+id/recipe_headnote"/>
        
        <TextView android:id="@+id/recipe_ingredients"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
				  android:textSize="@dimen/small_text_size"
                  android:layout_marginLeft="@dimen/margin_left"
                  android:layout_marginRight="@dimen/margin_right"
                  android:layout_marginTop="10dp"
                  android:layout_below="@+id/recipe_ingredients_title"/>
				  <!--android:layout_below="@+id/recipe_headnote"/>-->

        <TextView android:id="@+id/recipe_method"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentLeft="true"
				  android:textSize="@dimen/small_text_size"
                  android:layout_marginLeft="@dimen/margin_left"
                  android:layout_marginRight="@dimen/margin_right"
                  android:background="@color/color2_pale"
                  android:layout_marginTop="10dp"
                  android:layout_below="@+id/recipe_ingredients"/>
	    		  
        <TextView android:id="@+id/recipe_amount"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
				  android:textSize="@dimen/medium_text_size"
                  android:layout_marginLeft="@dimen/margin_left"
                  android:layout_marginRight="@dimen/margin_right"
                  android:layout_marginTop="-5dp"
                  android:layout_marginBottom="5dp"
	    		  android:layout_below="@+id/recipe_method"/>

    	<!-- Button -->
        <Button android:id="@+id/button_add"
       	    	android:text="@string/button_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
				android:textSize="@dimen/medium_text_size"
				android:layout_centerInParent="True"
       	    	android:layout_marginTop="5dp"
       	    	android:layout_marginBottom="5dp"
       	    	android:layout_below="@+id/recipe_amount" />
				<!--android:layout_alignParentRight="true"-->
        	    <!-- android:layout_toRightOf="@+id/chapter" -->
                
    </RelativeLayout>

